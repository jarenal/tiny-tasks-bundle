{% extends '::base.html.twig' %}

{% block body %}
    <nav class="navbar navbar-inverse" role="navigation">
        <div class="container-fluid">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">
                <a class="navbar-brand" href="#">TinyTasks! A Symfony3 Bundle</a>
            </div>
        </div><!-- /.container-fluid -->
    </nav>
    <div class="container">
        <div class="row">
            <div class="table-responsive">
            <table class="table">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Description</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody id="tasks-table">
                </tbody>
            </table>
            </div>
        </div>

        <div class="row">
            <button type="button" class="btn btn-primary btn-lg pull-right" data-toggle="modal" data-target="#popup-form-task">
                New task
            </button>
        </div>
    </div>

<!-- popup-form-task -->
<div class="modal fade" id="popup-form-task" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                <h4 class="modal-title" id="popup-label">New task</h4>
            </div>
            <div class="modal-body">
                <div class="alert alert-danger" role="alert" style="display:none"></div>
                <form class="form-horizontal" role="form" action="" method="post">
                    <input id="task_id" type="hidden" name="task[id]" value=""/>
                    <div class="form-group">
                        <label for="task_description" class="col-sm-2 control-label">Description</label>
                        <div class="col-sm-10">
                            <textarea class="form-control" id="task_description" placeholder="Enter your description here..." name="task[description]"></textarea>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="task_status" class="col-sm-2 control-label">Status</label>
                        <div class="col-sm-10">
                            <select id="task_status" class="form-control" name="task[status]">
                                <option value="">-- select --</option>
                                <option value="1">Pending</option>
                                <option value="2">In progress</option>
                                <option value="3">Finished</option>
                            </select>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                <button id="btn-save-task" type="button" class="btn btn-primary">Save changes</button>
            </div>
        </div>
    </div>
</div>

<!-- popup-confirm-delete-task -->
<div class="modal fade" id="popup-confirm-delete-task" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                <h4 class="modal-title" id="myModalLabel">Please, confirm deletion.</h4>
            </div>
            <div class="modal-body">
                Are you sure that you want remove the task #<span id="task-number"></span>?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                <button id="btn-confirm-deletion-task" type="button" class="btn btn-primary">Confirm</button>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1q8mTJOASx8j1Au+a5WDVnPi2lkFfwwEAa8hDDdjZlpLegxhjVME1fgjWPGmkzs7" crossorigin="anonymous">
    <link href="{{ asset('bundles/jarenaltinytasks/css/app.css') }}" rel="stylesheet" />
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script type="text/javascript" src="https://code.jquery.com/jquery-1.12.4.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js" integrity="sha384-0mSbJDEHialfmuBBQP6A4Qrprq5OVfW37PRR3j5ELqxss1yVqOtnepnHVP9aJ7xS" crossorigin="anonymous"></script>
    <script src="https://raw.github.com/jonnyreeves/jquery-Mustache/master/jquery.mustache.js"></script>
    <script src="https://raw.github.com/janl/mustache.js/master/mustache.js"></script>
    <script src="{{ asset("bundles/jarenaltinytasks/js/app.js") }}"></script>
{% endblock %}